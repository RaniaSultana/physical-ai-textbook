{
  "name": "physical-ai-textbook",
  "private": true,
  "version": "0.1.0",
  "description": "A comprehensive textbook for teaching Physical AI and Humanoid Robotics",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "web:start": "yarn --cwd apps/web start",
    "web:build": "yarn --cwd apps/web build",
    "web:deploy": "yarn --cwd apps/web deploy",
    "backend:start": "cd packages/backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "backend:test": "cd packages/backend && python -m pytest tests/",
    "backend:dev": "cd packages/backend && python -m uvicorn main:app --reload",
    "agents:test": "cd packages/agents && python -m pytest tests/",
    "dev": "concurrently \"yarn web:start\" \"yarn backend:start\"",
    "test": "yarn web:build && yarn backend:test && yarn agents:test",
    "setup": "cp .env.example .env && echo 'Created .env file (edit with your API keys)'"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
